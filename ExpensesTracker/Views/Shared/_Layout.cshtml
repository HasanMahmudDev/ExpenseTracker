<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/libs/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/libs/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            padding-top: 80px;
        }

        .hide {
            display: none;
        }
    </style>
    @await RenderSectionAsync("styles", false)
</head>
<body>
    <div class="col-8 offset-2">

    </div>
    <nav class=" navbar bg-primary navbar-expand-lg navbar-dark fixed-top border-bottom">

        <div class="col-8 container-fluid">
            <span class="navbar-brand">ExpensesTracker</span>
            <div class="navbar-collapse collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="ExpenseCategory" asp-action="Index">Catgories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="DailyExpense" asp-action="Index">Expenses</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid" style="min-height:calc(100vh - 140px)">
        @RenderBody()
    </div>
    <footer class="container text-info">
        &copy;@DateTime.Now.Year -ASP.NET Core MVC.
    </footer>
    @await RenderSectionAsync("scripts", false)
</body>
</html>
