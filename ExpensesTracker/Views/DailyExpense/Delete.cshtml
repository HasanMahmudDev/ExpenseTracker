@model DailyExpense

@{
    ViewData["Title"] = "Delete";
}

<div class="container mb-2">
    <div class="row">
        <div class="col-8 offset-2 shadow p-3 mb-5 bg-white rounded">
            <h3>Delete DailyExpense</h3>
            <form method="post" asp-action="Delete" asp-controller="DailyExpense" asp-route-DailyExpenseId="@Model.DailyExpenseId">
                <input type="hidden" asp-for="DailyExpenseId" />
                <div class="form-group row mb-2">
                    <label asp-for="ExpenseDate" class="col-form-label col-form-label-sm col-2"></label>
                    <div class="col-4">
                        <label>@Model.ExpenseDate.ToString("yyyy-MM-dd")</label>
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <label asp-for="ExpenseCategory" class="col-form-label col-form-label-sm col-2"></label>
                    <div class="col-4">
                        <label>@Model.ExpenseCategory.CategoryName</label>
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <label asp-for="Amount" class="col-form-label col-form-label-sm col-2"></label>
                    <div class="col-4">
                        <label>@Model.Amount.ToString("0.00")</label>
                    </div>
                </div>


                <div class="form-group row mb-2">
                    <div class="col-4 offset-2">
                        <button type="submit" class="btn btn-danger">Confirm Delete</button>
                    </div>
                </div>
            </form>
            <div class="row">
                <div class="col-8">
                    <a class="btn btn-outline-dark" asp-action="Index" asp-controller="DailyExpense"><i class="bi bi-layer-backward"></i> Back to Index</a>
                </div>
            </div>
        </div>
    </div>

</div>
@section styles {
    <link href="~/libs/icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="~/lib/Custom Design/main.css" rel="stylesheet" />
}

