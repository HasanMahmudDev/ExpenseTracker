@model ExpenseCategory

@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="col-6 offset-2 shadow p-3 mb-5 bg-white rounded">
        <h3>Create Expense Category</h3>
        <div id="placeholder"></div>
        <form method="post" asp-action="Create" asp-controller="ExpenseCategory">
            <div class="form-group row mb-1">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <label asp-for="CategoryName" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-6">
                    <input type="text" asp-for="CategoryName" class="form-control form-control-sm" />
                    <span asp-validation-for="CategoryName" class="text-danger" />
                </div>
            </div>
            <div class="form-group row mb-1">
                <div class="col-6 offset-2">
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </div>
        </form>
        <div class="row">
            <div class="col-6">
                <a class="btn btn-dark" asp-action="Index" asp-controller="ExpenseCategory"><i class="bi bi-layer-backward"></i> Back to Index</a>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/libs/jquery/jquery.min.js"></script>
    <script src="~/libs/validate/jquery.validate.js"></script>
    <script src="~/libs/validate/jquery.validate.unobtrusive.min.js"></script>
}

