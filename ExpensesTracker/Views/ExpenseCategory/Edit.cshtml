@model ExpenseCategory

@{
    ViewData["Title"] = "Edit";
}
<div class="row">
    <div class="col-6 offset-2 shadow p-3 mb-5 bg-white rounded">
        <h3>Edit Expense Category</h3>
        <form asp-action="Edit" asp-controller="ExpenseCategory" method="post">
            <input type="hidden" asp-for="ExpenseCategoryId" />
            <div class="form-group row my-2">
                <label class="col-form-label col-form-label-sm col-2">Category Name</label>
                <div class="col-6">
                    <input type="text" class="form-control form-control-sm" asp-for="CategoryName" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row my-1">
                <div class="col-10 offset-2">
                    <button type="submit" class="btn btn-success">Update</button>
                </div>
            </div>
        </form>
        <div class="row">
            <div class="col-6">
                <a class="btn btn-dark" asp-action="Index" asp-controller="ExpenseCategory"><i class="bi bi-layer-backward"></i> Back to Index</a>
            </div>
        </div>
    </div>
</div>

@section styles {
    <link href="~/libs/datepicker/css/bootstrap-datepicker.standalone.css" rel="stylesheet" />
    <link href="~/libs/icons/font/bootstrap-icons.css" rel="stylesheet" />
}