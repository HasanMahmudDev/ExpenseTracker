@model ExpenseCategory

@{
    ViewData["Title"] = "Delete";
}
<div class="row">
    <div class="col-6 offset-2 shadow p-3 mb-5 bg-white rounded">
        <h3>Are you sure you want to delete this?</h3>
        <div id="placeholder"></div>
        <div class="row my-1">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="form-group row mb-1">
            <label asp-for="CategoryName" class="col-form-label col-form-label-sm col-2"></label>
            <div class="col-4">
                <label>@Model.CategoryName</label>
            </div>
        </div>
        <form method="post" asp-action="Delete" asp-controller="ExpenseCategory" asp-route-ExpenseCategoryId="@Model.ExpenseCategoryId"
              id="message"
              data-ajax="true"
              data-ajax-method="POST"
              data-ajax-mode="replace"
              data-ajax-update="#placeholder"
              data-ajax-success="onSuccess">
            <div class="form-group row mb-1">

                <div class="col-4 offset-2">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </div>
        </form>
        <div class="row">
            <div class="col-8">
                <a class="btn btn-dark" asp-action="Index" asp-controller="ExpenseCategory"><i class="bi bi-layer-backward"></i> Back to Index</a>
            </div>
        </div>
    </div>
</div>

@section styles{
    <link href="~/libs/icons/font/bootstrap-icons.css" rel="stylesheet" />

}

@section scripts {
    <script src="~/libs/jquery/jquery.js"></script>
    <script src="~/libs/validate/jquery.validate.js"></script>
    <script src="~/libs/validate/jquery.validate.unobtrusive.js"></script>
    <script src="~/libs/ajax/jquery.unobtrusive-ajax.js"></script>

    <script>
        function onSuccess() {
            $("#message");
        }
    </script>
}
